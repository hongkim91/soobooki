<!DOCTYPE html>
<html>
  <head>
    <title>Soobooki</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top" id="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%= bookshelf(current_user) %>">Soobooki</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to 'Bookshelf', bookshelf(current_user) %></li>
              <li><%= link_to 'Books', books_path %></li>
              <% if current_user %>
                <li><%= link_to 'Friends', friendships_path %></li>
                <li><%= link_to 'Notifications', notifications_path(id:current_user.id) %></li>
                <li><%= link_to 'My Account', user_path(current_user) %></li>
                <% if current_user.admin? %>
                  <li><%= link_to 'Users Admin', users_path %></li>
                <% end %>
                <li><%= link_to 'Log out', log_out_path %></li>
              <% else %>
                <li><%= link_to 'Log in ', log_in_path %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="span9 offset3">
          <div class="row">
            <div class="span6">
              <% flash.each do |name,msg| %>
                <div class="alert">
                  <button class="close" data-dismiss="alert">Ã—</button>
                  <%= content_tag :div, msg, :id => "flash_#{name}" %>
                </div>
              <% end %>
            </div>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
