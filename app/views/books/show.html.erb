<p>
  <b>Title:</b>
  <%= @book.title %>
</p>

<p>
  <%= image_tag @book.image_url(:default).to_s %>
</p>

<%= link_to 'Edit', edit_book_path(@book), :class => "btn" %> 
<%= link_to 'Delete', book_path(@book), 
        :confirm => "Are you sure you want to delete '#{@book.title}'?",
        :method => :delete, :class => "btn"%>
