<tr>
  <td class="image-block"> 
    <% if image_url %>
      <%= image_tag image_url.gsub("SX640","SX60"), alt: "#{title}_img"%>
    <% else %>
      <%= image_tag "http://placehold.it/58x80"%>
    <% end %>
  </td>
  <td> 
    <b><%= title %>
    <%= "("+subtitle+")" if subtitle.present? %></br></b>
    <% if director.present? %>
      <%= (@api == "naver" ? "감독: ":"Director: ")+director %> </br>
    <% end %>
    <%= (@api == "naver" ? "배우: ":"Actors: ")+actor if actor.present?%> </br>
    <%= year %>
  </td>
  <td class="action-block">
    <% id = title.gsub(/[[:punct:]\s]/,'')+year.to_s+
         (director.present? ? director.gsub(/[[:punct:]\s]/,'') : '') %>
    <%= link_to "Add Movie", movie_posts_path(api: @api, title: title,
            subtitle: subtitle, director: director, actor: actor,
            year: year, image_url: image_url, rating: rating),
        method: :post, class: "btn add_#{id}", remote:true %>
  </td>
</tr>
