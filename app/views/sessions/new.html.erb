<div class="row">
  <div class="span6">
    <h1>Log in</h1>
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log in",:class => "btn" %>
      <%= link_to "Sign up", sign_up_path, :class => "btn" %>
      <%= link_to "Forgot password?", new_password_reset_path, :class => "btn" %>
    <% end %>
  </div>
</div>
