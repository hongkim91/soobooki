<div class="login-container row">
  <div class="span6 offset3">
    <h2>Keep record of your books and movies.</h2>
    <div class="row">
      <div class="span3">
        <h3>Soobooki account</h3>
        <%= form_tag sessions_path do %>
          <div class="field">
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email] %>
          </div>
          <div class="field">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>
          <%= submit_tag "Log in",:class => "btn" %>
          <%= link_to "Sign up", sign_up_path, :class => "btn" %>
          <%= link_to "Forgot password?", new_password_reset_path, :class => "btn" %>
        <% end %>
      </div>
      <div class="auth-providers span3">
        <div class="auth-provider">
          <h3>Facebook</h3>
          <%= link_to image_tag('facebook_128.png'), "/auth/facebook" %>
        </div>
        <div class="auth-provider">
          <h3>or Google</h3>
          <%= link_to image_tag('google_128.png'), "/auth/google" %>
        </div>
      </div>
    </div>
  </div>
</div>
