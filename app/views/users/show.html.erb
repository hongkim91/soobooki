<div class="row">
  <div class="span6">
    <h1> My Account Info </h1>
    <% unless @user.image_url.blank? %>
      <ul class="thumbnails">
        <li class="thumbnail">
          <%= image_tag @user.image_url(:thumb).to_s %>
        </li>
      </ul>
    <% end %>
    <p>
      <h3>Email</h3>
      <%= @user.email %>
    </p>
    <% if @user.username? %>
      <p>
        <h3>Username</h3>
        <%= @user.username %>
      </p>
    <% end %>
    <% if @user.info? %>
      <p>
        <h3>Info</h3>
        <%= @user.info %>
      </p>
    <% end %>
    <% unless @user.authentications.empty? %>
      <h3>Authentications</h3>
      <table class="table table-striped authentications">
        <tr>
          <th>Provider</th>
          <th>Action</th>
        </tr>
        <% for authentication in @user.authentications %>
        <tr>
          <td><%= authentication.provider %></td>
          <td><%= link_to "Delete", authentication, :confirm => 
        "Are you sure you want to delete authentication from #{authentication.provider}?",
                    :method => :delete, :class => "btn" %></td>
        </tr>
        <% end %>
      </table>
    <% end %>

    <%= link_to 'Edit', edit_user_path(@user), :class => "btn"%>
    <%= link_to 'Delete Account', user_path(@user), 
                :confirm => "Are you sure you want to delete your account?",
                :method => :delete, :class => "btn"%>
  </div>
</div>
