<div class="row">
  <div class="span6">
    <h1> My Account Info </h1>
    <% unless @user.image_url.blank? %>
      <%= image_tag @user.image_url(:thumb).to_s, class: "frame float-left" %>
    <% end %>

      <h3>Email</h3>
      <%= @user.email %>

    <% if @user.first_name? %>
      <p>
        <h3> Name: </h3>
        <%= @user.first_name+" "+@user.last_name %>
      </p>
    <% end %>
    <% if @user.bookshelf_name? %>
      <p>
        <h3>Bookshelf Name</h3>
        <%= @user.bookshelf_name %>
      </p>
    <% end %>
    <% if @user.info? %>
      <p>
        <h3>Info</h3>
        <%= @user.info %>
      </p>
    <% end %>
    <h3>Authentications</h3>
    <table class="table table-striped authentications">
      <tr>
        <th>Provider</th>
        <th>Action</th>
      </tr>
      <% for provider in ["Facebook","Google"] %>
      <tr>
        <td><%= provider %></td>
        <% authentication = @user.authentications.find_by_provider(provider) %>
        <% if authentication %>
        <td><%= link_to "Delete", authentication, :confirm => 
          "Are you sure you want to delete authentication from #{provider}?",
          :method => :delete, :class => "btn" %></td>
        <% else %>
        <td><%= link_to "Add", "/auth/facebook", :class => "btn" %></td>
        <% end %>
      </tr>
      <% end %>
    </table>

    <%= link_to 'Edit', edit_user_path(@user), :class => "btn"%>
    <%= link_to 'Delete Account', user_path(@user), 
                :confirm => "Are you sure you want to delete your account?",
                :method => :delete, :class => "btn"%>
    <div class="privacy-settings">
      <h1>Privacy Settings</h1>
      <h3>Bookshelf</h3>
      <div class="btn-group bookshelf-privacy" data-toggle="buttons-radio">
        <% ["Only Me","Friends","Users","Everyone"].each do |privacy_level| %>
          <% if @user.bookshelf_privacy == privacy_level %>
            <%= link_to privacy_level, edit_bookshelf_privacy_path(@user, privacy: privacy_level),
                class: "btn init-select", remote: true %>
          <% else %>
            <%= link_to privacy_level, edit_bookshelf_privacy_path(@user, privacy: privacy_level),
                class: "btn", remote: true %>
          <% end %>
        <% end %>
      </div>
      <h3>Book Reviews</h3>
      <table class="privacy table table-striped">
        <tr>
          <th>Book Title</th>
          <th class="privacy">Privacy Level</th>
        </tr>
        <% @book_posts.each do |book_post| %>
          <tr>
            <td><%= book_post.book.title %></td>
            <td>
              <div class="btn-group" data-toggle="buttons-radio">
                <% ["Only Me","Friends","Users","Everyone"].each do |privacy_level| %>
                  <% if book_post.privacy == privacy_level %>
                    <%= link_to privacy_level, 
                        edit_book_post_privacy_path(book_post, privacy: privacy_level),
                        class: "btn init-select", remote: true %>
                  <% else %>
                    <%= link_to privacy_level, 
                        edit_book_post_privacy_path(book_post, privacy: privacy_level),
                        class: "btn", remote: true %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
