<%= javascript_include_tag "book_posts" %>
<%= form_for(@book, html: {multipart: true}) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class:"span6" %>
  </div>
  <%= f.fields_for :book_posts do |builder| %>
    <div class="field date" >
      <%= builder.label :date_read %>
      <% years = ((Time.now.year.to_i).downto(1980)).map{|y| [y.to_s,y]}\
                                        .insert(0,['Select Year',0]) %>
      <%= builder.select :year, years %>
      <% months = (1..12).map{|m| [Date::MONTHNAMES[m],m]}\
                         .insert(0,['Select Month',0]) %>
      <%= builder.select :month, months %>
      <% days = (1..31).map{|d| [d.to_s,d]}.insert(0,['Select Day',0]) %>
      <%= builder.select :day, days %>
    </div>
    <div class="field book_image_local">
      <%= f.label :image, "Cover image file"%>
      <%= f.file_field :image %>
    </div>
    <div class="field book_image_url">
      <%= f.label :remote_image_url, "or Cover image URL" %>
      <%= f.text_field :remote_image_url %>
    </div>
    <div class="field">
      <%= builder.label :review %>
      <%= builder.cktext_area(:review, :namespace => "",:width => 610,:height => 500, :toolbar => 'MyToolbar') %>
    </div>
  <% end %>
  <div class="actions">
    <% if params[:action] == "new" or params[:action] == "create" %>
      <%= f.submit "Add Book",:class => "btn" %>
    <% else %>
      <%= f.submit "Edit Post",:class => "btn" %>
    <% end %>
  </div>
<% end %>

